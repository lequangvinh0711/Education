<script>

	$(document).ready(function (){
		$.ajax({
			url: "/TaiKhoan/ProfileInfo",
			type: "get",
			dataType: "json",
			success: function (lst) {
				$("#Name").val(lst.Name);
				var value = new Date(parseInt(lst.BirthDay.substr(6)));
				var ret = value.getDate() + "/" + (value.getMonth() + 1) + "/" + value.getFullYear();
				$("#Birthday").val(ret);
				$("#Gender").val(lst.Gender);
				$("#Address").val(lst.Address);
				$("#Phone").val(lst.Phone);
				$('.avatar1').attr('src', '').promise().done(function () {
					$(this).attr('src', lst.Image);
				});
			}
		});
	});

	$(document).ready(function () {
		var readURL = function (input) {
			if (input.files && input.files[0]) {
				var reader = new FileReader();

				reader.onload = function (e) {
					$('.avatar1').attr('src', e.target.result);
				}

				reader.readAsDataURL(input.files[0]);
			}
		}


		$(".file-upload").on('change', function () {
			readURL(this);
		});
	});


</script>